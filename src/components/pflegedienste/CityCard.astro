---
import type { StadtData } from "../../data/pflegedienste";

interface Props {
    stadt: StadtData;
}

const { stadt } = Astro.props;
---

<a
    href={`/pflegedienste/${stadt.bundeslandSlug}/${stadt.slug}/`}
    data-city-name={stadt.name}
    class="group flex items-center justify-between p-4 bg-white rounded-xl border border-gray-100 hover:border-teal/30 hover:shadow-md hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-teal/50 focus:ring-offset-2"
>
    <div class="flex items-center gap-3 min-w-0">
        <div
            class="flex-shrink-0 w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-teal/10 transition-colors"
        >
            <svg
                class="w-5 h-5 text-gray-400 group-hover:text-teal transition-colors"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
        </div>
        <div class="min-w-0">
            <h3
                class="font-medium text-gray-800 group-hover:text-teal transition-colors truncate"
            >
                {stadt.name}
            </h3>
            <p class="text-sm text-gray-500">
                {stadt.diensteCount}
                {stadt.diensteCount === 1 ? "Pflegedienst" : "Pflegedienste"}
            </p>
        </div>
    </div>
    <svg
        class="w-5 h-5 text-gray-400 group-hover:text-teal transition-colors flex-shrink-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
    </svg>
</a>
