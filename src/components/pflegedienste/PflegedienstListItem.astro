---
import type { Pflegedienst } from "../../data/pflegedienste";

interface Props {
  dienst: Pflegedienst;
}

const { dienst } = Astro.props;
---

<a
  href={`/pflegedienste/${dienst.bundeslandSlug}/${dienst.stadtSlug}/${dienst.slug}/`}
  class="group block bg-white rounded-xl border border-gray-100 p-4 hover:border-teal/30 hover:shadow-sm transition-all"
>
  <div class="flex items-start gap-3">
    <div class="flex-shrink-0 w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-teal/10 transition-colors">
      <svg class="w-5 h-5 text-gray-400 group-hover:text-teal transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="font-medium text-gray-800 group-hover:text-teal transition-colors line-clamp-2">
        {dienst.companyName}
      </h3>
      {dienst.address && (
        <p class="text-sm text-gray-500 mt-1 truncate">
          {dienst.address}
        </p>
      )}
      <div class="flex flex-wrap gap-x-4 gap-y-1 mt-2 text-xs text-gray-400">
        {dienst.phone && (
          <span class="flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Telefon
          </span>
        )}
        {dienst.email && (
          <span class="flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            E-Mail
          </span>
        )}
        {dienst.website && (
          <span class="flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            Website
          </span>
        )}
      </div>
    </div>
    <svg class="w-5 h-5 text-gray-400 group-hover:text-teal transition-colors flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </div>
</a>
