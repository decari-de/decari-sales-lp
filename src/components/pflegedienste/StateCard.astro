---
import type { BundeslandData } from "../../data/pflegedienste";

interface Props {
    bundesland: BundeslandData;
}

const { bundesland } = Astro.props;
---

<a
    href={`/pflegedienste/${bundesland.slug}/`}
    class="group block bg-white rounded-xl border border-gray-100 p-5 hover:border-teal/30 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-teal/50 focus:ring-offset-2"
>
    <div class="flex items-start justify-between gap-4">
        <div class="flex-1 min-w-0">
            <h3
                class="text-lg font-semibold text-navy group-hover:text-teal transition-colors"
            >
                {bundesland.name}
            </h3>
            <div
                class="flex flex-wrap gap-x-4 gap-y-1 mt-2 text-sm text-gray-500"
            >
                <span class="flex items-center gap-1">
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                        ></path>
                    </svg>
                    {bundesland.diensteCount.toLocaleString("de-DE")} Pflegedienste
                </span>
                <span class="flex items-center gap-1">
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    {bundesland.staedteCount.toLocaleString("de-DE")} St√§dte
                </span>
            </div>
        </div>
        <div class="flex-shrink-0">
            <div
                class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-teal/10 transition-colors"
            >
                <svg
                    class="w-5 h-5 text-gray-400 group-hover:text-teal transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"></path>
                </svg>
            </div>
        </div>
    </div>
</a>
