---
interface Props {
  variant?: 'default' | 'highlight' | 'dark';
  hover?: boolean;
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  variant = 'default',
  hover = false,
  padding = 'md',
  class: className = ''
} = Astro.props;

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6 md:p-8',
  lg: 'p-8 md:p-10'
};

const variantClasses = {
  default: 'bg-gray-50 rounded-xl',
  highlight: 'bg-teal/10 rounded-xl border-2 border-teal',
  dark: 'bg-navy text-white rounded-xl'
};

const hoverClass = hover ? 'hover:shadow-lg transition-all' : '';

const classes = `${variantClasses[variant]} ${paddingClasses[padding]} ${hoverClass} ${className}`;
---

<div class={classes}>
  <slot />
</div>
