---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  type?: 'button' | 'submit';
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = '',
  type = 'button'
} = Astro.props;

const baseClasses = 'font-semibold rounded-lg transition-all inline-flex items-center justify-center';

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const variantClasses = {
  primary: 'bg-teal text-white hover:bg-teal-light shadow-lg hover:shadow-xl',
  secondary: 'bg-white text-navy border-2 border-navy hover:bg-navy hover:text-white',
  ghost: 'bg-transparent text-teal hover:bg-teal/10'
};

const classes = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
