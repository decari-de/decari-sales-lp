---
interface Props {
  variant?: 'teal' | 'navy' | 'gray';
  centered?: boolean;
  class?: string;
}

const {
  variant = 'teal',
  centered = false,
  class: className = ''
} = Astro.props;

const variantClasses = {
  teal: 'bg-navy/5 border-l-4 border-teal',
  navy: 'bg-navy/5 border-l-4 border-navy',
  gray: 'bg-gray-100 border-l-4 border-gray-400'
};

const textClass = centered ? 'text-center' : '';

const classes = `${variantClasses[variant]} rounded-r-xl p-6 md:p-8 ${textClass} ${className}`;
---

<div class={classes}>
  <slot />
</div>
