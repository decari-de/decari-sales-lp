---
interface Props {
  title: string;
  subtitle?: string;
  eyebrow?: string;
  centered?: boolean;
  class?: string;
}

const {
  title,
  subtitle,
  eyebrow,
  centered = true,
  class: className = ''
} = Astro.props;

const containerClasses = centered
  ? 'text-center max-w-3xl mx-auto mb-12 md:mb-16'
  : 'mb-12 md:mb-16';
---

<div class={`${containerClasses} ${className}`}>
  {eyebrow && (
    <p class="text-lg text-teal font-semibold mb-3">{eyebrow}</p>
  )}
  <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-navy mb-4" set:html={title} />
  {subtitle && (
    <p class="text-lg text-gray-600">{subtitle}</p>
  )}
</div>
