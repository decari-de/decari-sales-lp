---
import Badge from '../ui/Badge.astro';

interface Props {
  name: string;
  age: number;
  condition: string;
  before: string[];
  after: string[];
  result: string;
  tags: string[];
}

const { name, age, condition, before, after, result, tags } = Astro.props;
---

<div class="bg-gray-50 rounded-xl p-6 border-2 border-gray-200 hover:border-teal hover:shadow-lg transition-all flex flex-col">
  <!-- Header -->
  <div class="flex items-center gap-3 mb-4">
    <div class="w-12 h-12 bg-teal/10 rounded-full flex items-center justify-center">
      <slot name="icon" />
    </div>
    <div>
      <h3 class="font-bold text-navy">{name}, {age}</h3>
      <p class="text-sm text-gray-500">{condition}</p>
    </div>
  </div>

  <!-- Vorher -->
  <div class="mb-4">
    <div class="text-xs font-semibold text-gray-400 uppercase tracking-wide mb-2">Vorher</div>
    <ul class="space-y-1 text-sm text-gray-600">
      {before.map(item => <li>• {item}</li>)}
    </ul>
  </div>

  <!-- Nachher -->
  <div class="mb-4">
    <div class="text-xs font-semibold text-teal uppercase tracking-wide mb-2">Nachher</div>
    <ul class="space-y-1 text-sm text-gray-700">
      {after.map(item => <li>• {item}</li>)}
    </ul>
  </div>

  <!-- Ergebnis -->
  <div class="mt-auto pt-4 border-t border-gray-200 text-center">
    <div class="text-2xl font-bold text-teal mb-1">{result}</div>
    <div class="flex flex-wrap gap-1 justify-center">
      {tags.map(tag => <Badge size="sm">{tag}</Badge>)}
    </div>
  </div>
</div>
