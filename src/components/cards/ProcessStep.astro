---
interface Props {
    number: number;
    title: string;
    description: string;
    variant?: "active" | "completed" | "pending";
    layout?: "desktop" | "mobile";
}

const {
    number,
    title,
    description,
    variant = "pending",
    layout = "desktop",
} = Astro.props;

const circleClasses = {
    active: "bg-teal text-white shadow-lg",
    completed: "bg-teal text-white shadow-lg",
    pending: "bg-white text-gray-400 border-2 border-gray-300",
};
---

{
    layout === "desktop" ? (
        <div class="text-center">
            <div
                class={`w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold relative z-20 ${circleClasses[variant]}`}
            >
                {number}
            </div>
            <h3 class="font-bold text-navy mb-2">{title}</h3>
            <p class="text-sm text-gray-600">{description}</p>
        </div>
    ) : (
        <div class="flex items-start gap-4">
            <div
                class={`w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0 font-bold ${circleClasses[variant]}`}
            >
                {number}
            </div>
            <div>
                <h3 class="font-bold text-navy">{title}</h3>
                <p class="text-sm text-gray-600">{description}</p>
            </div>
        </div>
    )
}
