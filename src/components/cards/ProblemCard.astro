---
import IconCircle from '../ui/IconCircle.astro';

interface Props {
  iconColor: 'orange' | 'yellow' | 'red';
  title: string;
  description: string;
  stat: string;
  statLabel: string;
}

const { iconColor, title, description, stat, statLabel } = Astro.props;

const statColors = {
  orange: 'text-orange-600',
  yellow: 'text-yellow-600',
  red: 'text-red-600'
};
---

<div class="bg-gray-50 rounded-xl p-6 md:p-8 hover:shadow-lg transition-all group">
  <IconCircle color={iconColor} class="mb-4 group-hover:scale-110 transition-transform">
    <slot name="icon" />
  </IconCircle>
  <h3 class="text-xl font-bold text-navy mb-3">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <div class={`text-2xl font-bold ${statColors[iconColor]}`}>{stat}</div>
  <p class="text-sm text-gray-500">{statLabel}</p>
</div>
