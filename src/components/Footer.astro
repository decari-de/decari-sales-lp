---
// Footer Component
const base = import.meta.env.BASE_URL;
---

<footer class="bg-navy text-white py-12 md:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-4 gap-8">
      <!-- Logo & Tagline -->
      <div class="md:col-span-2">
        <img
          src={`${base}assets/decari-logo.png`}
          alt="Decari Logo"
          class="h-10 w-auto mb-4 brightness-0 invert"
        />
        <p class="text-white/70 max-w-sm">
          Sozialleistungs-Service für Pflegedienste. Mehr Umsatz mit bestehenden Klienten – ohne zusätzliches Personal.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-semibold mb-4">Navigation</h4>
        <ul class="space-y-2 text-white/70">
          <li><a href={`${base}#loesung`} class="hover:text-white transition-colors">Lösung</a></li>
          <li><a href={`${base}#rechner`} class="hover:text-white transition-colors">ROI-Rechner</a></li>
          <li><a href={`${base}#prozess`} class="hover:text-white transition-colors">Prozess</a></li>
          <li><a href={`${base}blog/`} class="hover:text-white transition-colors">Blog</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="font-semibold mb-4">Rechtliches</h4>
        <ul class="space-y-2 text-white/70">
          <li><a href={`${base}impressum/`} class="hover:text-white transition-colors">Impressum</a></li>
          <li><a href={`${base}datenschutz/`} class="hover:text-white transition-colors">Datenschutz</a></li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/10 mt-10 pt-8 text-center text-white/50 text-sm">
      <p>&copy; 2025 Decari GmbH. Alle Rechte vorbehalten.</p>
    </div>
  </div>
</footer>
