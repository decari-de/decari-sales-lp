---
import SectionHeader from "../ui/SectionHeader.astro";
import ProcessPhaseCard from "../cards/ProcessPhaseCard.astro";
import { processPhases } from "../../data/processSteps";
---

<section id="prozess" class="py-16 md:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader
            title="So funktioniert die Zusammenarbeit"
            subtitle="Von der Analyse bis zur dauerhaften Betreuung – wir übernehmen den kompletten Prozess"
        />

        <!-- Phasen -->
        <div class="space-y-4">
            {processPhases.map((phase) => (
                <ProcessPhaseCard
                    number={phase.number}
                    title={phase.title}
                    description={phase.description}
                    details={phase.details}
                    defaultOpen={phase.defaultOpen}
                />
            ))}
        </div>

        <!-- Rollenklarheit Box -->
        <div class="mt-12 bg-gradient-to-br from-navy/5 to-teal/5 rounded-2xl p-6 md:p-8">
            <h3 class="text-lg md:text-xl font-bold text-navy mb-6 text-center">
                Klare Aufgabenverteilung
            </h3>
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Was macht Decari -->
                <div class="bg-white rounded-xl p-5 shadow-sm">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 rounded-full bg-teal/10 flex items-center justify-center">
                            <svg class="w-5 h-5 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <h4 class="font-bold text-teal">Das übernimmt Decari</h4>
                    </div>
                    <ul class="space-y-2 text-sm text-gray-600">
                        <li class="flex items-start gap-2">
                            <span class="text-teal mt-1">•</span>
                            <span>Potenzial-Analyse & Beratung</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-teal mt-1">•</span>
                            <span>Komplette Antragstellung</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-teal mt-1">•</span>
                            <span>Behördenkommunikation</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-teal mt-1">•</span>
                            <span>Widersprüche & Rechtsbeistand</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-teal mt-1">•</span>
                            <span>Folgeanträge & Nachbetreuung</span>
                        </li>
                    </ul>
                </div>

                <!-- Was tun Sie -->
                <div class="bg-white rounded-xl p-5 shadow-sm">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 rounded-full bg-navy/10 flex items-center justify-center">
                            <svg class="w-5 h-5 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <h4 class="font-bold text-navy">Das tun Sie</h4>
                    </div>
                    <ul class="space-y-2 text-sm text-gray-600">
                        <li class="flex items-start gap-2">
                            <span class="text-navy mt-1">•</span>
                            <span>Klientendaten bereitstellen</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-navy mt-1">•</span>
                            <span>Unterschriften einholen</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-navy mt-1">•</span>
                            <span>Mehr Leistungen abrechnen</span>
                        </li>
                    </ul>
                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <p class="text-sm text-gray-500 italic">
                            Zeitaufwand: ~1,5 Stunden pro Monat
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
