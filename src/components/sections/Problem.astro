---
import SectionHeader from '../ui/SectionHeader.astro';
import ProblemCard from '../cards/ProblemCard.astro';
import HighlightBox from '../ui/HighlightBox.astro';
import { problems } from '../../data/problems';
---

<section id="problem" class="py-16 md:py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeader
      title="Die Pflegekassen zahlen zu wenig.<br />Aber es gibt Geld, das Sie noch nicht holen."
    />

    <!-- Problem Cards -->
    <div class="grid md:grid-cols-3 gap-6 md:gap-8 mb-12">
      {problems.map(problem => (
        <ProblemCard
          iconColor={problem.iconColor}
          title={problem.title}
          description={problem.description}
          stat={problem.stat}
          statLabel={problem.statLabel}
        >
          <svg slot="icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={problem.iconPath} />
          </svg>
        </ProblemCard>
      ))}
    </div>

    <!-- Highlight Box -->
    <HighlightBox centered class="max-w-3xl mx-auto">
      <p class="text-lg md:text-xl text-navy font-medium">
        <strong>40%</strong> Ihrer Klienten haben Anspruch auf Zusatzleistungen â€“ nur <strong>12%</strong> erhalten sie.
        <span class="text-teal font-bold">Dieses Geld liegt auf dem Tisch.</span>
      </p>
    </HighlightBox>
  </div>
</section>
